global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - "/etc/prometheus/rules/*.yml"

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - localhost:9093

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node-exporter'
    static_configs:
      - targets: 
        - 'localhost:9100'
{% for host in groups['web_servers'] %}
        - '{{ hostvars[host]['ansible_default_ipv4']['address'] }}:9100'
{% endfor %}
{% for host in groups['elasticsearch'] %}
        - '{{ hostvars[host]['ansible_default_ipv4']['address'] }}:9100'
{% endfor %}

  - job_name: 'nginx'
    static_configs:
      - targets:
{% for host in groups['web_servers'] %}
        - '{{ hostvars[host]['ansible_default_ipv4']['address'] }}:9113'
{% endfor %}

  - job_name: 'elasticsearch'
    static_configs:
      - targets:
{% for host in groups['elasticsearch'] %}
        - '{{ hostvars[host]['ansible_default_ipv4']['address'] }}:9114'
{% endfor %}

  - job_name: 'kibana'
    static_configs:
      - targets: ['localhost:5601']

  - job_name: 'blackbox'
    metrics_path: /probe
    params:
      module: [http_2xx]
    static_configs:
      - targets:
{% for host in groups['web_servers'] %}
        - http://{{ hostvars[host]['ansible_default_ipv4']['address'] }}
{% endfor %}
        - http://localhost:5601
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: localhost:9115