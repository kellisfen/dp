{
  "dashboard": {
    "id": null,
    "title": "Nginx Monitoring Dashboard",
    "tags": ["nginx", "web", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Nginx Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(nginx_http_requests_total[5m])",
            "legendFormat": "{{instance}} - {{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Nginx Response Status Codes",
        "type": "stat",
        "targets": [
          {
            "expr": "sum by (status) (rate(nginx_http_requests_total[5m]))",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Nginx Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "nginx_connections_active",
            "legendFormat": "{{instance}} - Active"
          },
          {
            "expr": "nginx_connections_reading",
            "legendFormat": "{{instance}} - Reading"
          },
          {
            "expr": "nginx_connections_writing",
            "legendFormat": "{{instance}} - Writing"
          },
          {
            "expr": "nginx_connections_waiting",
            "legendFormat": "{{instance}} - Waiting"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Nginx Request Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(nginx_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{instance}} - 95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(nginx_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{instance}} - 50th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}