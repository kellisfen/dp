# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Terraform
*.tf text eol=lf
*.tfvars text eol=lf
*.hcl text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
*.adoc text eol=lf

# Source code
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.go text eol=lf
*.rb text eol=lf
*.php text eol=lf
*.java text eol=lf
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.7z binary
*.rar binary

# Archives
*.tar.gz binary
*.tar.bz2 binary
*.tar.xz binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# GitHub Linguist overrides
# Exclude generated files from statistics
*.tfstate linguist-generated=true
*.tfstate.backup linguist-generated=true
package-lock.json linguist-generated=true
yarn.lock linguist-generated=true

# Mark documentation as documentation
docs/** linguist-documentation
*.md linguist-documentation

# Language detection
*.tf linguist-language=HCL
*.hcl linguist-language=HCL
*.yml linguist-language=YAML
*.yaml linguist-language=YAML

# Diff settings
*.tf diff=terraform
*.yml diff=yaml
*.yaml diff=yaml
*.json diff=json
*.md diff=markdown

